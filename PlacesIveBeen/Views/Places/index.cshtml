@using PlacesIveBeen.Models;

<h1>Places I've Been</h1>

@if (Model.Count == 0)
{
  <p>There are no places in the list.</p>
}
<ul>
  @foreach (Places Places in Model)
  {
    <li><a href="Places/@Places.Id">Place: @Places.PlaceName<br> Travling Partner: @Places.TravelingPartner<br> Journal: @Places.JournalEntry<br></a></li>
  }

</ul>
<a href="/Places/New">Add a new place.</a>